@model WebApp.Models.Curso

@{
    ViewData["Title"] = "Details";
}

<h1>Informações do Curso</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Código do Curso:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodCurso)
        </dd>
        <dt class="col-sm-2">
            Nome do Curso:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCurso)
        </dd>
    </dl>
</div>
<hr />
<div>
    <a asp-action="Edit" asp-route-id="@Model.CodCurso">Editar</a> |
    <a asp-action="Index">Retornar para Listagem de Cursos</a>
</div>