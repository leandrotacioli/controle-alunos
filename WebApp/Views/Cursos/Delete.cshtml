@model WebApp.Models.Curso

@{
    ViewData["Title"] = "Delete";
}

<h1>Exclusão de Curso</h1>

<h3>Deseja realmente excluir o curso?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Código do Curso:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodCurso)
        </dd>
        <dt class="col-sm-2">
            Nome do Curso:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCurso)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CodCurso" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>
<hr />
<div>
    <a asp-action="Index">Retornar para Listagem de Cursos</a>
</div>