@model WebApp.Models.Aluno

@{
    ViewData["Title"] = "Delete";
}

<h1>Exclusão de Aluno</h1>

<h3>Deseja realmente excluir o aluno?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Código do Aluno:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodAluno)
        </dd>
        <dt class="col-sm-2">
            Nome do Aluno:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeAluno)
        </dd>
        <dt class="col-sm-2">
            Data de Nascimento:
        </dt>
        <dd class="col-sm-10">
            @{
                string dataNascimento = Model.DataNascimento.ToString("dd/MM/yyyy");
            }
            @Html.DisplayFor(model => dataNascimento)
        </dd>
        <dt class="col-sm-2">
            Curso:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curso.NomeCurso)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CodAluno" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>
<hr />
<div>
    <a asp-action="Index">Retornar para Listagem de Alunos</a>
</div>